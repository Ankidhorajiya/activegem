<%= form_for @product, :class=>'form-inline' do|f| %>
	
	<div class="form-group">
		<%= f.label(:name ,'Name::-' ) %>
		<%= f.text_field :name, :class=>'form-control' %>
	</div>

	<div class="form-group">
		<%= f.label(:price ,'Price::-' ) %>
		<%= f.text_field :price, :class =>'form-control' %>
	</div>

	<div class="form-group">
		<%= f.submit 'Add Product' , :class=> 'btn btn-default' %>

	</div>

<% end %>