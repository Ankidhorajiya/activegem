<div class="container">
	<div class="jumbotron">
		<div class="page-header">
			<p>All Products</p>
		</div>
		<table align="center">
			<tr>
				<th>Name</th>
				<th>Price</th>
			</tr>

			<% @product.each do|f| %>
				<tr>
					<td><%= f.name %></td>
					<td><%= f.price %></td>
				</tr>
			<% end %>
		</table>
		<%= link_to 'New Product', new_product_path %>
	</div>
</div>